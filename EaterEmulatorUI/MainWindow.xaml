<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EaterEmulatorUI"
        x:Class="EaterEmulatorUI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="45,52,0,0" VerticalAlignment="Top" Click="StartButton_Click"/>
        <Ellipse x:Name="clockPulseLight" HorizontalAlignment="Left" Height="30" Margin="154,47,0,0" VerticalAlignment="Top" Width="30" Stroke="Black" Fill="#FFFF8080" RenderTransformOrigin="0.007,1.518"/>
        <Label x:Name="outputLabel" Content="0" HorizontalAlignment="Left" Margin="45,106,0,0" VerticalAlignment="Top" />
        <Button x:Name="resetButton" Content="Reset" HorizontalAlignment="Left" Margin="45,161,0,0" VerticalAlignment="Top" Click="ResetButton_Click"/>
    </Grid>
</Window>
